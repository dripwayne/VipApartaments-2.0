@model List<VipApartaments.Controllers.Panel.detailsModel>
<style>
        table {
  border-collapse: collapse;
  width: 100%;
  margin-bottom: 1rem;
  background-color: white;
  color: #333;
}

th, td {
  text-align: left;
  padding: 0.5rem;
  border: 1px solid #ccc;
}

th {
  font-weight: bold;
}

tbody tr:nth-child(even) {
  background-color: #f2f2f2;
}

tbody tr:hover {
  background-color: #ddd;
}
    </style>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>RoomType</th>
            <th>DateFrom</th>
            <th>DateTo</th>
            <th>ToPay</th>
            <th>Pay</th>
            
        </tr>
    </thead> 
    <tbody>
        @foreach (var x in Model)
        {
        <tr>
            <td>@x.Id</td>
            <td>@x.RoomType</td>
            <td>@x.DateFrom.ToString("dd/MM/yyyy")</td>
            <td>@x.DateFrom.ToString("dd/MM/yyyy")</td>
            <td>@x.ToPay</td>
            <td>@x.Pay</td>
           
        </tr>
        }
        </tbody>
</table>